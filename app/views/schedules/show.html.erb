<%= render '/flash_alerts' %>
<div class="schedule">
  <div class="row">
    <div class="col-md-4">
      <div class="instructions">
        <h4>Instructions</h4>
        <ol>
          <li>
            <p>Share a link to this page with people, to let them add their available times.</p>
          </li>
          <li>
            <p>Come back and see what times you are all online.</p>
          </li>
          <li>
            <p>Profit!</p>
          </li>
        </ol>
      </div>
      <div class="people">
        <h4>People</h4>
        <table class="table">
          <thead>
            <th>Name</th>
            <th>Timezone</th>
            <th>Options</th>
          </thead>
          <tbody>
            <% @schedule.people.each do |person| %>
              <tr class="<%= cycle('odd', 'even') %>">
                <td class="name">
                  <%= person.name %>
                </td>
                <td class="timezone">
                  <%= person.timezone %>
                </td>
                <td class="options">
                  <%= link_to 'Edit', edit_schedule_person_path(@schedule, person) %>
                  <%= link_to 'Remove', schedule_person_path(@schedule, person), data: { confirm: 'Are you sure?' }, method: 'delete' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <p>
          <%= link_to 'Add a person', new_schedule_person_path(@schedule) %>
        </p>
      </div>
    </div>
    <div class="col-md-8">
      <h4>Schedule</h4>
      <div class="timezone">
        <%= form_for @user, url: user_path, method: :patch do |f| %>
          <%= hidden_field_tag :schedule_uuid, @schedule.uuid %>
          <div class="input-group">
            <% opts = time_zone_options(f.object.timezone, request.remote_ip) %>
            <%= f.time_zone_select :timezone, opts[:priority], opts, class: 'custom-select' %>
            <div class="input-group-append">
              <%= f.submit 'Update', class: 'btn btn-xs btn-secondary' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="timetable">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <% Schedule::DAY_NAMES.each do |name| %>
                <th class="heading">
                  <%= name[0,3] %>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% Schedule::TIMES_OF_DAY.each_with_index do |time, time_of_day_index| %>
              <tr class="<%= cycle('odd', 'even') %>">
                <th>
                  <%= time.strftime("%I:%M %p") %>
                </th>
                <% @schedule.day_indexes(time_of_day_index).each do |index| %>
                  <% people = @people_at_indexes[index] %>
                  <% utc_index = @schedule.utc_index(index, @user.timezone) %>
                  <% if people.empty? or people.size == 1 %>
                    <% style = nil %>
                  <% else %>
                    <% percent = people.size*100/@schedule.people.size %>
                    <% style = "background-color: hsl(0, 80%, #{100 - percent/4}%)" %>
                  <% end %>

                  <td class="entry" style="<%= style %>", data-index="<%= utc_index %>">
                    <% people.each do |person| %>
                      <%= person.name %>
                      <br>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
