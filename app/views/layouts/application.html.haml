!!! 5
%html
  %head
    %title Internet Friends Yay
    = include_stylesheets :screen, :media => 'all'
    = csrf_meta_tag
  %body
    .title
      %h1= link_to 'Internet Friends Yay', root_url
      .byline
        An application for herding virtual cats.
    
    .flash
      - if flash.notice
        .notice
          %p= notice
      - if flash.alert
        .alert
          %p= alert

    = yield

    = include_javascripts :screen
    = yield :javascript
